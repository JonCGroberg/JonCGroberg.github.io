---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import { SITE_DESCRIPTION } from "../consts";
import avatar from "../images/avatar.jpeg";
const cards = [
    "GitHub Stats",
    "Git Contribution Graph",
    "Education",
    "Current Experience",
    "Current Project",
    "Location",
    "Feed",
];
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={"Home"} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <div
                class="flex flex-wrap sm:flex-nowrap mb-0 sm:mb-6 justify-center text-center sm:text-start gap-x-10 gap-y-5"
            >
                <Image
                    src={avatar}
                    alt="Picture of Jonathan"
                    class="shadow-lg outline-1 outline outline-slate-200 w-20 h-20 my-2"
                />
                <p>
                    I'm a <u>Software Engineer Intern</u> at the <u>
                        Hillsborough County Sherrif's Department</u
                    >. Currently, I am working on a <u
                        >Habit Tracking Application</u
                    >. Located in the <u>Greater Tampa Bay</u>
                </p>
            </div>
            <div class="border-t my-8"></div>
            <section class="flex flex-wrap gap-2">
                {cards.map((cardTitle) => <Card title={cardTitle} />)}
            </section>
            <div class="border-t my-8"></div>
        </main>
        <Footer />
    </body>
</html>
