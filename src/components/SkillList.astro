---
type skillList = {
	languages: string[];
	frameworks: string[];
	tools: string[];
};

const { skills } = Astro.props;
---

<div class="flex flex-col gap-4 py-4">
	<div>
		<div
			class="text-xs font-bold uppercase text-red-500 mb-2 tracking-wide"
		>
			Languages
		</div>
		<div class="flex flex-wrap gap-2">
			{
				skills.languages.map((lang: string) => (
					<span class="px-3 py-1 rounded-full bg-red-50 text-red-700 font-semibold text-xs hover:bg-red-100 transition-colors duration-150 border border-red-100">
						{lang}
					</span>
				))
			}
		</div>
	</div>
	<div>
		<div
			class="text-xs font-bold uppercase text-orange-500 mb-2 tracking-wide"
		>
			Frameworks
		</div>
		<div class="flex flex-wrap gap-2">
			{
				skills.frameworks.map((framework: string) => (
					<span class="px-3 py-1 rounded-full bg-orange-50 text-orange-700 font-semibold text-xs hover:bg-orange-100 transition-colors duration-150 border border-orange-100">
						{framework}
					</span>
				))
			}
		</div>
	</div>
	<div>
		<div
			class="text-xs font-bold uppercase text-green-600 mb-2 tracking-wide"
		>
			Tools / Technologies
		</div>
		<div class="flex flex-wrap gap-2">
			{
				skills.tools.map((tool: string) => (
					<span class="px-3 py-1 rounded-full bg-green-50 text-green-700 font-semibold text-xs hover:bg-green-100 transition-colors duration-150 border border-green-100">
						{tool}
					</span>
				))
			}
		</div>
	</div>
</div>
